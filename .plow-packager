#!/bin/bash

name='plow'
version=''

if test $1; then
	version=$1
else
   echo "You have to set a version."
   exit 1
fi

package="${name}-${version}"

mkdir -p /tmp/${package}

dir=`pwd`
plow_dir=`dirname $0`

cd ${plow_dir}

revision=$(svn info | grep "Revision" | tr -d "[:alpha:][:space:]:")

cp AUTHORS ChangeLog COPYING NEWS README TODO plow.1 Makefile /tmp/${package}
if test "$?" -eq 1; then
	echo  "You have to change to trunk directory."
	exit 1
fi

patchfile="/tmp/${package}/Makefile.patch"
echo "10a11,12"                                         >> ${patchfile}
echo "> VERSION        = ${version}"                    >> ${patchfile}
echo "> CXXFLAGS      += -DVERSION=\\\"\${VERSION}\\\"" >> ${patchfile}
patch /tmp/${package}/Makefile <${patchfile}
rm -f ${patchfile}

readme="/tmp/${package}/README"
echo ""                                                        >> ${readme}
echo "REVISION"                                                >> ${readme}
echo "========"                                                >> ${readme}
echo "This package was created from svn revision ${revision}." >> ${readme}

mkdir /tmp/${package}/src
cp src/*.cpp /tmp/${package}/src
cp src/*.h /tmp/${package}/src
mkdir /tmp/${package}/bin

cd /tmp
tar czf ${package}.tar.gz ${package}
cd ${dir}
mv /tmp/${package}.tar.gz ./
rm -rf /tmp/${package}
echo "${dir}/${package}.tar.gz created ..."

